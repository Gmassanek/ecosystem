.span-17.prepend-1.border
  - unless flash[:notice].nil?
    %p.notice= flash[:notice]
  %h2= @node.title
  - unless @node.handles.nil?
    .mediaLinks
      %ul
        - @node.handles.each do |key, value|
          %li= link_to_site_handle(key, @node.site_handle.link_to(key))
  %p= link_to @node, @node.homepage, :target => '_blank' unless @node.homepage.nil?
  %p= link_to "Edit", edit_node_path(@node)
  %p= @node.description
.span-6.sidebar.last
  - unless @node.links.empty?
    %h3 Helpful Links 
    %ul
      - @node.links.each do |link|
        %li= link_to link.url, link.url
  %h3 Related Nodes
  %ul
    - @node.relationships.each do |r|
      %li= relationship_sentence_with_link(r, @node)


