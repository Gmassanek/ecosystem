:javascript
  jQuery(document).ready(function(){
      $('.accordion .head').click(function() {
          $(this).next().toggle('medium');
          return false;
      }).next().hide();
  });
.accordion.span-24.last
  %h2 Community Buzz
  .span-8.border
    = render 'nodes/buzz_section', :attribute_name => 'tweets', :title => "Twitter", :collection => node.tweets, :partial_name => 'tweet'
  .span-8.border
    = render 'nodes/buzz_section', :attribute_name => 'stack_results', :title => "Stack Overflow", :collection => node.stack_results, :partial_name => 'stack_result'
