= simple_form_for @relationship do |f|
  %fieldset
    %legend Relationship
    = f.association :node1
    = f.association :node2
    = f.input :sentence1, :placeholder => '%1 is related to %2', :input_html => { :class => 'text' }
    = f.input :sentence2, :placeholder => '%2 is related to %1', :input_html => { :class => 'text' }
    = f.button :submit
